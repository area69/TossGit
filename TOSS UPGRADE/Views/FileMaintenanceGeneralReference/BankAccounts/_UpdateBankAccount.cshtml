@model TOSS_UPGRADE.Models.FM_GeneralReference_BankAccount
@{
    DB_TOSSEntities SISDB = new DB_TOSSEntities();
}
@using TOSS_UPGRADE.Models;

@using (Ajax.BeginForm("UpdateBankAccount", "FileMaintenanceGeneralReference", new AjaxOptions { OnSuccess = "AngularGlobalAlertsCallingNoModal('FMGeneralReferenceController', 'Get_BankAccountTable','Bank Account Successfully Update')", OnFailure = "OnFailure()", }))
{
<div class="row">
    @Html.HiddenFor(m => m.getBankAccountColumns.BankAccountID, new { })
    @Html.HiddenFor(m => m.AccountTypeIDTemp, new { id = "AccountTypeIDTempID" })
    @Html.HiddenFor(m => m.BankNameIDTemp, new { id = "BankNameIDTempID" })
    @Html.HiddenFor(m => m.AccountCodeIDTemp, new { id = "AccountCodeIDTempID" })
    <div class="col-md-5 form-group" id="BankDivID">

    </div>
    <div class="col-md-3 form-group">
        <label>Fund Type</label>
        @Html.DropDownListFor(m => m.FundID, Model.FundNameList, new { @class = "form-control select2", id = "FundNameListID2", onchange = "CurrentAccountConcate() " })
    </div>
    <div class="col-md-4 form-group">
        <label>Current Account</label>
        @Html.TextBoxFor(m => m.getBankAccountColumns.CurrentAccount, new { @class = "form-control", type = "text", id = "CurrentAccountID" })
    </div>
</div>

    <div class="row">
        <div class="col-md-5 form-group" id="AccountCodeDivID">

        </div>
        <div class="col-md-3 form-group">
            <label>Account Name</label>
            @Html.TextBoxFor(m => m.getBankAccountColumns.AccountName, new { @class = "form-control", type = "text" })
        </div>
        <div class="col-md-4 form-group">
            <label>Account No</label>
            @Html.TextBoxFor(m => m.getBankAccountColumns.AccountNo, new { @class = "form-control", type = "text" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-5 form-group" id="AccountTypeDivID">

        </div>
        <div class="col-md-2">
            <label style="visibility:hidden">New Bank</label>
            <button type="button" class="form-control bg-addbutton black" data-toggle="modal" data-target="#addAccountTypeModal"><b>New Account</b></button>
        </div>
        <div class="col-md-1">

        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6">
                    <label style="visibility:hidden">New Bank</label>
                    <button type="submit" class="btn bg-addbutton black form-control"><b>Save</b></button>
                </div>
                <div class="col-md-6">
                    <label style="visibility:hidden">New Bank</label>
                    <button type="reset" class="btn bg-headerbc form-control white" onclick="AngularGlobalEdit('FMGeneralReferenceController','Get_AddBankAccount','')"><b>Cancel</b></button>
                </div>
            </div>
        </div>
    </div>
}
<script>
        $(function () {
            LoadDataTable();
            LoadPopOver();
            CurrentAccountConcate();
        })
</script>
