@{
    ViewBag.Title = "Report of Accountability";
}

<script>
    $("#reportofaccountability").addClass("active");
</script>
<div class="content-header row">
    <div class="content-header-left col-md-6 mb-2">
        <h3 class="content-header"><b>Report of Accountability</b></h3>
    </div>
</div>

<div class="row font-weight-bold black">
    <div class="col-md-12">
        <div class="card" style="border: 1px solid; border-color: #EABEBB">
            <div class="card-block">
                <div class="card-body box-shadow-2">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <nav>
                                    <div class="nav nav-tabs text-center" id="nav-tab" role="tablist">
                                        <a class="nav-link active text-white bg-headerbc" id="base-tab3" data-toggle="tab" aria-controls="tab3" href="#tab3" aria-expanded="true">RAAF</a>
                                        <a class="nav-link text-white bg-headerbc" id="base-tab4" data-toggle="tab" aria-controls="tab4" href="#tab4" aria-expanded="false">Consolidated RAAF By Collector</a>
                                        <a class="nav-link text-white bg-headerbc" id="base-tab5" data-toggle="tab" aria-controls="tab5" href="#tab5" aria-expanded="false">Consolidated RAAF With/Without Money Value</a>
                                    </div>
                                </nav>
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active" id="tab3" aria-expanded="true" aria-labelledby="base-tab3">
                                        <div class="card-body rounded" style="border: 1px solid; border-color: #E5E5E5;">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label>Collector</label>
                                                        <select class="form-control">
                                                            <option>Administrator</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label>Date From</label>
                                                        <input name="name" value="1/1/2017" class="form-control pickadate " />
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label>Date To</label>
                                                        <input name="name" value="1/1/2017" class="form-control pickadate " />
                                                    </div>
                                                </div>
                                                <div class="col-md-1"></div>
                                                <div class="col-md-2 pull-right">
                                                    <label style="visibility:hidden">Hide</label><br />
                                                                                                 <b><a class="btn bg-addbutton form-control font-weight-bold black button" data-caption="01/01/19" href="~/Resources/PDF/blank.pdf" target='_blank'>View Report</a></b>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div role="tabpanel" class="tab-pane" id="tab4" aria-expanded="true" aria-labelledby="base-tab4">
                                        <div class="card-body rounded" style="border: 1px solid; border-color: #E5E5E5;">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label>Month</label>
                                                        <select class="form-control">
                                                            <option>January</option>
                                                            <option>February</option>
                                                            <option>March</option>
                                                            <option>April</option>
                                                            <option>May</option>
                                                            <option>June</option>
                                                            <option>July</option>
                                                            <option>August</option>
                                                            <option>September</option>
                                                            <option>October</option>
                                                            <option>November</option>
                                                            <option>December</option>
                                                        </select>
