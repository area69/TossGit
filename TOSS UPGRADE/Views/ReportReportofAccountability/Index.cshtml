                                                <div class="col-md-3 mt-3 form-group">
                                                    <label><input type="radio" name="optradio">Without Money Value</label>
                                                </div>
                                                <div class="col-md-3 mt-3 form-group">
                                                    <label><input type="radio" name="optradio">With Money Value</label>
                                                </div>
                                                <div class="col-md-2 text-right">
                                                    <label style="visibility:hidden">Hide This</label>
                                                    <b><a class="btn bg-addbutton form-control font-weight-bold black button" data-caption="01/01/19" href="~/Resources/PDF/blank.pdf" target='_blank'>View Report</a></b>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
