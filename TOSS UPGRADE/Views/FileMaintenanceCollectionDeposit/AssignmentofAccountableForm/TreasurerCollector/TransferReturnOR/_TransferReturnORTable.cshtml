@model IEnumerable<TOSS_UPGRADE.Models.FM_CollectionAndDeposit.AFTransferReturnORList>
@{
    DB_TOSSEntities SISDB = new DB_TOSSEntities();
}
@using TOSS_UPGRADE.Models;
<div class="card-content collapse show">
    <div class="card-body box-shadow-2">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration w-100">
                        <thead class="text-center">
                            <tr>
                                <th>Main Collector</th>
                                <th>Sub Collector</th>
                                <th>Stub No.</th>
                                <th>Quantity</th>
                                <th>Starting OR</th>
                                <th>Ending OR</th>
                                <th>Is Transferred?</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @{
                                foreach (var Items in Model)
                                {
                                    var ViewEdit = "<button class=\"btn btn-icon btn-block black bg-addbutton border-0\" type=\"button\"><i class='ft-edit mr-1'></i><b>Edit</b></button>";
                                    var ViewDelete = "<button class=\"btn btn-icon white btn-block bg-headerbc  border-0\" type=\"button\"> <i class='ft-delete mr-1'></i><b>Delete</b></button>";
                                    var ActionContentProgram = ViewEdit + ViewDelete;
                                    <tr>
                                        <td>@Items.CollectorName</td>
                                        <td>@Items.SubCollector</td>
                                        <td>@Items.StubNo</td>
                                        <td>@Items.Quantity</td>
                                        <td>@Items.StratingOR</td>
                                        <td>@Items.EndingOR</td>
                                        <td>@Items.IsTransferred</td>
                                        <td>
                                            <button type="button" onfocusout="PopoveLostFocus()" class="btn btn-m btn-warning popover-trigger" data-toggle="popover" data-content="@ActionContentProgram"
                                                    data-original-title="" data-html="true" data-placement="right">
                                                <i class="la la-bars"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        LoadDataTable();
        LoadPopOver();
    })
</script>