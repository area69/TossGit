        $('[data-toggle="popoverReason"]').popover({
            animation: true,
            content: popupElement,
            html: true
        });
    });
</script>
@* popover 2*@
<script>
    function OpenReasonButtonModal() {
        //var ID = $("#SupplyAccountCodeList").val();
        var IDTemp = "1";
        $.ajax({
            url: '/BankTransactionMiscellaneousAdjustment/GetReason',
            data: { ID: IDTemp },
            success: function (result) {
                $('#ReasonButtonModal').html(result);
            }
        })
        $('[data-toggle="popoverReason"]').popover('hide');
    }
</script>
