@model TOSS_UPGRADE.Models.FM_SignatoriesModel
@{
    DB_TOSSEntities SISDB = new DB_TOSSEntities();
}
@using TOSS_UPGRADE.Models;

@using (Ajax.BeginForm("AddSignatories", "FileMaintenanceSignatories", new AjaxOptions { OnSuccess = "AngularGlobalAlertsCallingNoModalNoSuccessWithDoubleFunc('FMSignatoriesController', 'GetListOfSignatories','SuccessSave1')", OnFailure = "OnFailure()", }))
{

    <div class="row">
        <div class="col-md-4 form-group">
            <label>Signatory Name</label>
            @Html.TextBoxFor(m => m.getSignatoriesColumns.SignatoriesName, new { @class = "form-control", type = "text", ng_model = "SignatoriesNameID" })
            @Html.ValidationMessageFor(model => model.getSignatoriesColumns.SignatoriesName)

        </div>
        <div class="col-md-4 pl-0 form-group" id="_DynamicDDPositionNameID">

        </div>
        <div class="col-md-2 p-0">
            <label style="visibility:hidden">Position</label>
            <button type="button" class="btn bg-headerbc white form-control" data-toggle="modal" data-target="#addPositionModal" ng-click="Get_PositionTable()" style="text-shadow: 1px 1px 2px #000000"><b>Add Position</b></button>
        </div>
        <div class="col-md-2">
            <label>Department Head</label>
            <select class="form-control">
                <option>Yes</option>
                <option>No</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 form-group">
            <label>Department</label>
            <select class="form-control">
                <option>Regional Trial Court - Branch V, 96 Office of the COC, Dinalupitan</option>
            </select>
        </div>
        <div class="col-md-2 form-group">
            <label style="visibility:hidden">Position</label>
            <button type="submit" class="btn bg-addbutton form-control white" style="text-shadow: 1px 1px 2px #000000"><b>Save</b></button>
        </div>
        <div class="col-md-2 form-group">
            <label style="visibility:hidden">Position</label>
            <button type="reset" onclick="AngularGlobalEdit('FMSignatoriesController','Get_SignatoriesAdd','')" class="btn bg-headerbc white form-control" style="text-shadow: 1px 1px 2px #000000"><b>Cancel</b></button>
        </div>
    </div>
}