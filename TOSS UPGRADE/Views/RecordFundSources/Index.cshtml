
@{
    ViewBag.Title = "Fund Sources";
}

<script>
    $("#fund").addClass("active");
</script>
<div class="content-header row">
    <div class="content-header-left col-md-6 mb-2">
        <h3 class="content-header"><b>Fund Sources</b></h3>
    </div>
</div>

<div class="content-body font-weight-bold black">
    <div class="content-body">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                <div class="card" style="border: 1px solid; border-color: #EABEBB">
                    <div class="card-block">
                        <div class="card-body">


                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="card-block">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-3 col-sm-3">
                                                    <div class="form-group">
                                                        <label>Fund Sources</label>
                                                        <select class="form-control" id="dp">
                                                            <option>Internal Revenue Allotment</option>
                                                            <option>Subsidy From LGU</option>
                                                            <option>Subsidy From NGA</option>
                                                            <option>Donations</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col-md-3 col-sm-3">
                                                    <div class="form-group">
                                                        <label>Date</label>
                                                        <select class="form-control">
                                                            <option>All</option>
                                                            <option>Today</option>
                                                            <option>This-Week</option>
                                                            <option>This-Week-To-Date</option>
                                                            <option>This-Month</option>
                                                            <option>Custom</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col-md-3 col-sm-3">
                                                    <div class="form-group">
                                                        <label>From</label>
                                                        <input name="name" value="" class="form-control pickadate ui-datepicker" />
                                                    </div>
                                                </div>
                                                <div class="col-md-3 col-sm-3">
                                                    <div class="form-group">
                                                        <label>To</label>
                                                        <input name="name" value="" class="form-control pickadate
                                                               ui-datepicker" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-10 col-sm-10"></div>
                                                <div class="col-md-2 col-sm-2 text-right">
                                                    <div class="form-group">
                                                        <button type="button" class="bottom-right form-control black" style="background-color: #F0AD4E;"><b>View</b></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>   

                            <div class="card box-shadow-2">
                                <div class="card-header" style="background-color: #FEDF82;">
                                    <h4 class="card-title black"><b>Fund Sources: [ <span id="dpValue"> </span>]</b></h4>
                                </div>
                                <div class="card-content collapse show">
                                    <div class="card-body box-shadow-2">
                                        <div class="table-responsive">
                                                <table class="table table-striped table-bordered zero-configuration w-100">
                                                    <thead>
                                                        <tr>
                                                            <th width="20%;">Date Deposited</th>
                                                            <th>Particular</th>
                                                            <th width="25%;">Amount</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td></td>
                                                            <td></td>
                                                            <td></td>
                                                        </tr>
                                                    </tbody>
                                                    <tfoot class=" text-white">
                                                        <tr class="footerbc">
                                                            <th></th>
                                                            <th class="text-right">Total:</th>
                                                            <th class="text-right"></th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card box-shadow-2">
                                <div class="card-header"  style="background-color: #FEDF82;">
                                    <h4 class="card-title black"><b>Account Details</b></h4>
                                </div>
                                <div class="card-content collapse show">
                                    <div class="card-body box-shadow-2">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered zero-configuration w-100">
                                                <thead>
                                                    <tr>
                                                        <th width="23%">Fund Type</th>
                                                        <th width="25%">Bank Name</th>
                                                        <th width="22%">Bank Account Number</th>
                                                        <th width="10%">Amount</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td class="text-left">Special Education Fund</td>
                                                        <td class="text-left">Land Bank of the Philippines</td>
                                                        <td class="text-left">1234-1234-1234-1234</td>
                                                        <td class="text-right">100,000,000,000.00</td>
                                                    </tr>
                                                </tbody>
                                                <tfoot class=" text-white">
                                                    <tr class="footerbc">
                                                        <th></th>
                                                        <th></th>
                                                        <th class="text-right">Total:</th>
                                                        <th class="text-right">100,000,000,000.00</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#dpValue').text($('#dp option:selected').text());
    $(document).ready(function () {
        $('#dp').on('change', function () {
            var dpValue = $(this).find('option:selected').text();
            $('#dpValue').text(dpValue);
        });
    });
</script>