            '<div class="row m-0"><button class="btn btn-icon bg-headerbc white form-control target-desc t-has-destination2" destination="table-project" style="border-color: white"><i class="la la-clipboard"></i><b>Return</b></button></div>';
        $('[data-toggle="popoverSignatories"]').popover({
            animation: true,
            content: popupElement,
            html: true
        });
    });
</script>
<script>
    function OpenConsolidationButtonModal() {
        //var ID = $("#SupplyAccountCodeList").val();
        var IDTemp = "1";
        $.ajax({
            url: '/FileMaintenanceAccountableForm/GetTransfer',
            data: { ID: IDTemp },
            success: function (result) {
                $('#_ButtonModal').html(result);
            }
        })
        $('[data-toggle="popoverSignatories"]').popover('hide');
    }
</script>